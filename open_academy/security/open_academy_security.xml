<?xml version="1.0" ?>
<odoo>
  <record id="module_open_academy_category" model="ir.module.category">
    <field name="name">Open Academy</field>
  </record>

  <!-- Open Academy User Group -->
  <record id="open_academy_group_user" model="res.groups">
    <field name="name">User</field>
    <field name="category_id"
           ref="module_open_academy_category"/>
    <field name="implied_ids"
           eval="[(4, ref('base.group_user'))]"/>
  </record>

  <!-- Open Academy Manager Group -->
  <record id="open_academy_group_manager" model="res.groups">
    <field name="name">Manager</field>
    <field name="category_id"
           ref="module_open_academy_category"/>
    <field name="implied_ids"
           eval="[(4, ref('open_academy_group_user'))]"/>
    <field name="users"
           eval="[(4, ref('base.user_root')),
                  (4, ref('base.user_admin'))]"/>
  </record>


  <data noupdate="1">
    <record id="course_user_rule" model="ir.rule">
      <field name="name">Open Academy Course User Access</field>
      <field name="model_id" ref="model_open_academy_course"/>
      <field name="domain_force">
          [('active','=',True)]
      </field>
      <field name="groups" eval="[(4,ref('open_academy_group_user'))]"/>
    </record>
  </data>

</odoo>
