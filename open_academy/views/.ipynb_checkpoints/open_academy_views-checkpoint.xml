<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Course Form View -->
    <record model='ir.ui.view' id='course_form_view'>
        <field name="name">course.form</field>
        <field name="model">open_academy.course</field>

        <field name="arch" type="xml">
        <form string="Course Form">
            <sheet>
               <group>
                  <field name="name"/>
                 
                  <field name='active'/>
                  <field name='level'/>
                  </group>
                          
                  <group>
                     <field name="create_date"/>
                  </group>
                  <notebook>
                     <page string="Description">
                        <field name="description"/>
                     </page>
                        <page string="About">
                        This is an example of notebooks
                     </page>
                  </notebook>
               </sheet>
            </form>
         </field>
     </record>
    <!--Course List View -->
    <record model='ir.ui.view' id='course_tree_view'>
        <field name="name">course.tree</field>
        <field name="model">open_academy.course</field>
        <field name="arch" type="xml">
            <tree string="Courses">
                <field name="name"/>
                <field name="level"/>
                <field name="create_date"/>
            </tree>
         </field>
     </record>
    <!--Course Search View -->
     <record model="ir.ui.view" id="course_search_view">
        <field name="name">course.search</field>
        <field name="model">open_academy.course</field>
        <field name="arch" type="xml">
           <search>
              <field name="name"/>
              <field name="level"/>
              <filter name="level" string="Level"
                 domain="[('level', '=', '1')]"/>
                <group string="Group By">
                   <filter name="by_difficulty" string="Level"
                     context="{'group_by': 'level'}"/>
                </group>
           </search>
        </field>
    </record>
        <act_window id="course_wizard_action"
        name ="Course Level" 
        res_model="open_academy.wizard"
        src_model="open_academy.course" 
        view_mode="form" 
        target="new" 
        key2="client_action_multi"/>
    <!-- Wizard View -->
    <record id="wizard_level_course_view" model="ir.ui.view">
        <field name="name">Wizard Level</field>
        <field name="model">open_academy.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="course_ids" widget="many2many_list"/>
                    <field name="level"/>
                </group>
                <footer>
                    <button name="set_level" string="Change Level" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>